<!DOCTYPE html>
<html lang="en">

<head>
	<title>Home - Classroom</title>
	<link rel="icon" type="image/x-icon" href="https://ssl.gstatic.com/classroom/favicon.png">
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    .card {
      background: #ffffff;
      padding: 24px;
      border-radius: 14px;
      width: 100%;
      max-width: 360px;
      box-shadow: 0 10px 30px rgba(0,0,0,.4);
    }
    h1 { margin-bottom: 12px; }
    input {
      width: 100%;
      padding: 12px;
      border-radius: 10px;
      border: none;
      margin-bottom: 10px;
      font-size: 1rem;
    }
    button {
      width: 100%;
      padding: 12px;
      border-radius: 10px;
      border: none;
      font-size: 1rem;
      background: #ff0000;
      color: white;
      cursor: pointer;
    }
    .error { color: #f87171; margin-top: 8px; }
    .content { display: none; }
  </style>
</head>
<body style="font-family: system-ui, sans-serif;
      background: #000000;
      color: #e5e7eb;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
	"
>
<div class="card" id="login">
  <h1 style="color: black">Enter Password</h1>
  <input type="password" id="password" placeholder="Password" />
  <button onclick="login()">Log in</button>
  <div class="error" id="error"></div>
</div>

<div class="card content" id="content">
  <h1>Links</h1>
  <ul>
    <li><a href="https://google.com">Google</a></li>
    <li><a href="https://github.com">GitHub</a></li>
    <li><a href="file:///C:/">Local Files</a></li>
  </ul>
	<button onclick="logout()">Lock Again</button>
</div>

<script>
/* ===============================
   CONFIG
   Change this password
================================ */
const PASSWORD_HASH = '29e4d1e6224d4755fd7f60642082ae6d177f50c8c339e75a56d0066167e80a08';

/* ===============================
   PASSWORD CHECK
================================ */
async function sha256(text) {
  const data = new TextEncoder().encode(text);
  const hash = await crypto.subtle.digest('SHA-256', data);
  return Array.from(new Uint8Array(hash))
    .map(b => b.toString(16).padStart(2, '0'))
    .join('');
}

async function login() {
  const input = document.getElementById('password').value;
  const error = document.getElementById('error');

  const hash = await sha256(input);

  if (hash === PASSWORD_HASH) {
    localStorage.setItem('authenticated', 'true');
    showContent();
  } else {
    error.textContent = 'Wrong password';
  }
}

function showContent() {
  document.getElementById('login').style.display = 'none';
  document.getElementById('content').style.display = 'block';
}

function logout() {
  localStorage.removeItem('authenticated');
  location.reload();
}

if (localStorage.getItem('authenticated') === 'true') {
  showContent();
}
</script>
</body>
</html>
